<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.blueberry.spider.signal">

    <TextView android:text="Welcome to Spider (Signal mode)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffff4615"
        android:textSize="35dp"
        android:id="@+id/intro" />
    <TextView android:text="RED = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:textColor="#ffff4615"
        android:textSize="40dp"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/red"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#fffff5c4"
        android:singleLine="false"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />
    <TextView android:text="Yellow = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:textColor="#fffffa29"
        android:textSize="40dp"
        android:id="@+id/textView4" />
    <EditText
        android:id="@+id/yellow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#fffff5c4"
        android:singleLine="false"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />
    <TextView android:text="Green = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:textColor="#ff45ff02"
        android:textSize="40dp"
        android:id="@+id/textView3" />
    <EditText
        android:id="@+id/green"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#fffff5c4"
        android:singleLine="false"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />


</RelativeLayout>
